# Aliases for common git commands. E.g., enter "git d" for "git diff"
# These settings live in the ~/.gitconfig file.

[alias]
	b = branch
	ba = branch -a
	ci = commit
	co = checkout
	d = diff
	di = diff
	dc = diff --cached
	fp = format-patch
	g = !git gui &
	gr = log --graph
	go = log --graph --pretty=oneline --abbrev-commit
	k = !gitk &
	ka = !gitk --all &
	lc = log ORIG_HEAD.. --stat --no-merges
	lp = log --patch-with-stat
	mnf = merge --no-ff
	mnff = merge --no-ff
	mt = mergetool
	p = format-patch -1
	serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
	sra = svn rebase --all
        s = status
	sh = !git-sh
	st = status
	stm = status --untracked=no
	stfu = status --untracked=no
	pullsrb = !git stash save && git pull --rebase && git stash pop && echo 'Success!'
[user]
	name = Nate Kresge
	email = kresge@neon-lab.com
[core]
    editor = /usr/bin/vim
    excludesfile=/Users/nate/.git/common-exclusions
[push]
	default = simple

